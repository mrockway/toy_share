<% @chats.each do |chat| %>
	<div id="chat">
		<% messages = chat.messages %>
		<% messages.each do |message| %>
			<%= message.content %>
		<% end %>
		<%= form_for :message, :url => messages_path do |f| %>	
		<%= f.text_field :content %>
		<%= f.hidden_field :chat_id, :value => chat.id %>
	<%= f.submit "Replay" %>					
<% end %>
	</div>
<% end %>