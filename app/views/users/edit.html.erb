<div class="editUser-container">
  </br>
  </br>
  <div class="row">
    <div class="col s6 offset-s3 z-depth-2 blank-card">
    </br>
      <%= form_for @user do |f| %>
      <div class="input-field">
        <%= f.text_field :f_name, autofocus: true %>
        <%= f.label :f_name, "First Name" %>
      </div>
      <div class="input-field">
        <%= f.text_field :l_name %>
        <%= f.label :l_name, "Last Name" %>
      </div>
      <div class="input-field">
        <%= f.text_field :email %>
        <%= f.label :email, "Email" %>
      </div>
      <div class="input-field">
        <%= f.text_field :bio  %>
        <%= f.label :bio, "Bio" %>
      </div>
      <div class="input-field col s12">
        <select>
          <option value="" disabled selected>Choose your option</option>
          <option value="1">New York</option>
          <option value="2">San Francisco</option>
          <option value="3">Los Angeles</option>
        </select>
        <label>City</label>
      </div>
      Avatar:
      <%= f.file_field :avatar %>
      </br>
      <div class="input-field">
        <%= f.submit "Submit", class: "btn waves-effect waves-light" %>
        <%= link_to 'delete',user_path(@user), data: {confirm: "Are you sure you want to delete your account?"}, :method => :delete, class: "btn waves-effect waves-light red accent-4" %>
      </div>
      </br>
      <% end %>
    </div>
  </div>
</div>