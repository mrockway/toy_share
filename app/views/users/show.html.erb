<h1>Profile page</h1>
<div class="row">
  <div class="col s8 m4">
    <div class="card z-depth-2">
      <div class="card-image">
        <%= image_tag @user.avatar.url(:large) %>
        <span class="card-title"></span>
      </div>
      <div class="card-content">
        <h5><%= @user.f_name %> <%= @user.l_name %></h5>
        <p><small>Member Since: <%=@user.created_at.strftime("%B %d, %Y")%></small></p>
        <h5>Bio:</h5>
        <p> <%= @user.bio %> </p>
      </div>
      <div class="card-action">
        <p><%= link_to 'Edit', edit_user_path(@user), class: "btn-floating btn-large green" %></p>
      </div>
    </div>
  </div>
  <div class="col s4 m8">
    <% if @toys.any? %>
    <% (@toys).in_groups_of(3, false).each do |group| %>
    <div class="row">
      <% group.each do |t| %>
      <div class="col s12 m4">
      <div class="card z-depth-1">
        <div class="card-image ">
          <%= image_tag t.image.url(:medium) %>
        </div>
        <div class="card-content">
          <p><%= t.name %></p>
          <p><%= t.description %></p>
          <p><small><%= t.created_at.strftime("%A, %B %d") %></small></p>
        </div>
      </div>
      </div>
      <% end %>
    </div>
      <% end %>
      <%end%>
      <div class="pagination">
<a><%= will_paginate @toys, class: "waves-effect waves-light btn" %></a>
</div>
  </div>
</div>

  






