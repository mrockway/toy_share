<div class="container">
	<div class="row">
		<div class="toy-title">
			<h2 class="toy-name center col m12"><%= @toy.name %></h2>
		</div>
		<div class="row">
			<div class="col m4 toy-image">
				<%= image_tag @toy.image.url(:medium) %>
			</div>
			<div class="toy-details">
				<p class="toy-desc"><%= @toy.description %></p>
				<p class="toy-age"><%= @toy.age_range %></p>
				<p class="toy-gender"><%= @toy.gender %></p>
				<p class="toy-city"><%= @toy.city.name %></p>
				<button class="toy-contact">Send <%= @toy.user.f_name %> a message</button>
			</div>
			<div class="toy-owner">
				<% if current_user.id == @toy.user_id %>
					<%= link_to "Edit Toy", edit_toy_path(@toy) %>
					<%= link_to "Remove Toy", toy_path(@toy), method: :delete %>
				<% end %>
			</div>
		</div>
	</div>	
</div>