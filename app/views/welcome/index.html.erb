<div class="row">
	<div class="col m12">
		<div class="logo-image center">
			<%= image_tag("Drawing.png", class: "homepage-image") %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col m12">
		<div class="show-toys">
			<h1>Show New Toys here</h1>
			<% if @toys.any? %>
			<% @toys.each do |toy| %>
  			<div class="col s12 m4">
  				<div class="card z-depth-2">
    				<div class="card-image">
    				<%= image_tag toy.image.url(:large), class: "toys-image responsive-img" %>
    				</div>
    				<div class="card-action">
		          <p><%= link_to "#{toy.name}", toy_path(toy) %></p>
    				</div>
  				</div>
  			</div>
  		<% end %>
  		<% end %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col m12">
		<h1>Show how site works</h1>
	</div>
</div>